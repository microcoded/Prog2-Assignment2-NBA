<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox fx:controller="controller.AssociationController" xmlns:fx="http://javafx.com/fxml/1" styleClass="background" prefHeight="420.0" prefWidth="600.0" 
      spacing="10">
    <ImageView id="playoffsImage" fitWidth="600" preserveRatio="true" >    
        <image>
            <Image url="@NBA_Back.jpg" />
        </image>
    </ImageView>

    <javafx.scene.layout.GridPane fx:id="buttonGrid" hgap="20" vgap="20" GridPane.halignment="CENTER" GridPane.valignment="CENTER" alignment="CENTER">
        <Button fx:id="exploreTeamsButton" text="Explore the teams" onAction="#exploreTeams" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button fx:id="newSeasonButton" text="Arrange a new season" onAction="#newSeason" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Button fx:id="exitButton" text="Exit" onAction="#exit" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </javafx.scene.layout.GridPane>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
